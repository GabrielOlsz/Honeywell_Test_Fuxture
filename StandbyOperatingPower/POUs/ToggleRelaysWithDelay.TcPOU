<?xml version="1.0" encoding="utf-8"?>
<TcPlcObject Version="1.1.0.1" ProductVersion="3.1.4024.13">
  <POU Name="ToggleRelaysWithDelay" Id="{672ec801-d5d4-4ea2-8f3a-4853371ff3c7}" SpecialFunc="None">
    <Declaration><![CDATA[FUNCTION_BLOCK ToggleRelaysWithDelay
VAR_INPUT
    StartDelayToggle : BOOL;           // Button from HMI
//    DelayTime : TIME := T#200MS;       // Delay between each relay
	DelayMsInput : INT; 			   // From HMI, in milliseconds
END_VAR

VAR_IN_OUT
    BoolRelayArray : ARRAY[1..22] OF BOOL; // Relay control array
END_VAR

VAR
    Timer : TON;                // Delay timer
    RelayIndex : INT := 1;      // Current relay being toggled
    Active : BOOL := FALSE;     // Whether the sequence is running
    StartLatch : BOOL := FALSE; // Edge-detection to avoid retriggering
	DelayTime : TIME; 			// Internal TIME-converted value
END_VAR]]></Declaration>
    <Implementation>
      <ST><![CDATA[
DelayTime := INT_TO_TIME(DelayMsInput);  //Convert int delay value from HIMI to type TIME

//Start the toggle sequence only once
IF StartDelayToggle AND NOT StartLatch THEN
    Active := TRUE;
    RelayIndex := 1;	//Relay index tracker
    StartLatch := TRUE;
    Timer(IN := FALSE); //Make sure timer resets
END_IF

// Reset latch when button is released
IF NOT StartDelayToggle THEN
    StartLatch := FALSE;
END_IF


// Toggle relays one-by-one with delay
IF Active THEN
    Timer(IN := TRUE, PT := DelayTime);

    IF Timer.Q THEN
        IF RelayIndex <= 22 THEN
            BoolRelayArray[RelayIndex] := TRUE;
            RelayIndex := RelayIndex + 1;	//Increment the index
            Timer(IN := FALSE); // Reset timer for next relay
        ELSE
            Active := FALSE; // Done with all relays
            Timer(IN := FALSE);
        END_IF
    END_IF
ELSE
    Timer(IN := FALSE); //Reset timer
END_IF
]]></ST>
    </Implementation>
